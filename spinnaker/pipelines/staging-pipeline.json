{
  "application": "myapp",
  "name": "Deploy to Staging",
  "stages": [
    {
      "name": "Deploy to Staging",
      "refId": "1",
      "type": "deployManifest",
      "requisiteStageRefIds": [],
      "account": "staging-account",
      "cloudProvider": "kubernetes",
      "manifestArtifactAccount": "embedded-artifact",
      "manifests": [
        {
          "apiVersion": "apps/v1",
          "kind": "Deployment",
          "metadata": {
            "name": "myapp-staging",
            "namespace": "staging"
          },
          "spec": {
            "replicas": 2,
            "selector": {
              "matchLabels": {
                "app": "myapp"
              }
            },
            "template": {
              "metadata": {
                "labels": {
                  "app": "myapp"
                }
              },
              "spec": {
                "containers": [
                  {
                    "name": "myapp",
                    "image": "302263069749.dkr.ecr.us-west-1.amazonaws.com/myapp:staging",
                    "ports": [
                      {
                        "containerPort": 80
                      }
                    ]
                  }
                ]
              }
            }
          }
        }
      ]
    }
  ],
  "triggers": [
    {
      "enabled": true,
      "type": "git",
      "branch": "staging",
      "project": "myorg",
      "slug": "myapp",
      "source": "github"
    }
  ]
}
